<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hockeyapp_background_header"
    tools:context=".oldStory.PrologueOldStoryAttack">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/framePrologueOldStoryAttackStartID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frameRadioGroupPrologueOldStoryAttackStartID"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="#70ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPrologueOldStoryAttackActionID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="0sp"
                    android:lineSpacingMultiplier="0.8"
                    android:text="@string/prologue_old_story_attack_text_start_north_attack"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.131" />

                <TextView
                    android:id="@+id/textPrologueOldStoryAttackStatusID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="0sp"
                    android:lineSpacingMultiplier="0.8"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.646"
                    tools:layout_editor_absoluteY="396dp"
                    tools:text="состояние" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameRadioGroupPrologueOldStoryAttackStartID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <RadioGroup
                android:id="@+id/radioGroupPrologueOldStoryAttackWestID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackWestFirstID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackWestFirst"
                    android:text="@string/prologue_old_story_attack_button_start_west_blade"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackWestSecondID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackWestSecond"
                    android:text="@string/prologue_old_story_attack_button_start_west_bow"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-22dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackWestThirdID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackWestThird"
                    android:text="@string/prologue_old_story_attack_button_start_west_forest"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="visible"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupPrologueOldStoryAttackNorthID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackNorthFirstID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackNorthFirst"
                    android:text="@string/prologue_old_story_attack_button_north_prepared_attack"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackNorthSecondID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackNorthSecond"
                    android:text="@string/prologue_old_story_attack_button_north_wait"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-22dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackNorthThirdID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackNorthThird"
                    android:text="@string/prologue_cave_inspect"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="invisible"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupPrologueOldStoryAttackMainID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackMainFirstID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackMainFirst"
                    android:text="@string/prologue_old_story_attack_button_fight"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackMainSecondID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackMainSecond"
                    android:text="@string/prologue_old_story_attack_button_main_attack_attack"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="-22dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueOldStoryAttackMainThirdID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueOldStoryAttackMainThird"
                    android:text="@string/prologue_old_story_attack_button_main_attack_leader"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />

            </RadioGroup>
        </FrameLayout>


        <ScrollView
            android:id="@+id/scrollPrologueOldStoryAttackStartID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/frameRadioGroupPrologueOldStoryAttackStartID"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="#70ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textPrologueOldStoryAttackStartID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lineSpacingExtra="3sp"
                android:lineSpacingMultiplier="0.8"
                android:orientation="vertical"
                android:text="@string/prologue_old_story_attack_text_start_north"
                android:textColor="#303030"
                android:textSize="18sp"
                android:visibility="visible" />

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
