        app:layout_constraintVertical_bias="0.142" />

    <ImageButton
        android:id="@+id/prolDownTextDirectionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <Button
        android:id="@+id/buttonProlDownStartID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStartDownPrologue"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintLeft_toRightOf="@+id/thirdButtonPlolDownID"
        app:layout_constraintRight_toLeftOf="@+id/fourthButtonPlolDownID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909" />

    <TextView
        android:id="@+id/counterPrologDownID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <ProgressBar
        android:id="@+id/progressBarPrologueDownID"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="344dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <TextView
        android:id="@+id/textPrologDownID"
        android:layout_width="342dp"
        android:layout_height="248dp"
        android:lineSpacingMultiplier="0.8"
        android:textColor="#303030"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/twoID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTwo"
        android:text="Пропустить"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="519dp" />


</android.support.constraint.ConstraintLayout>
