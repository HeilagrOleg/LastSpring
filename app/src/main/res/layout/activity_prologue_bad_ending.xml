<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prologue_final_background"
    tools:context=".PrologueBadEnding">

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="448dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPrologueBadFinalID"
                android:layout_width="346dp"
                android:layout_height="match_parent"
                android:background="#50ffffff"
                android:lineSpacingExtra="0sp"
                android:lineSpacingMultiplier="0.8"
                android:text="@string/prologue_final_bad_text_start"
                android:textColor="#303030"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>
    </ScrollView>

    <RadioGroup
        android:id="@+id/radioGroupPrologueBadFinalFirstID"
        android:layout_width="342dp"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902">

        <RadioButton
            android:id="@+id/buttonPrologueBadFinalFirstID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#60ffffff"
            android:button="@drawable/radio_button_selector"
            android:onClick="onPrologueCaveAfterFirst"
            android:text="@string/prologue_final_bad_buttont"
            android:textColor="#303030"
            android:textSize="16sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="387dp" />

        <RadioButton
            android:id="@+id/buttonPrologueBadFinalSecondID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#60ffffff"
            android:button="@drawable/radio_button_selector"
            android:onClick="onPrologueCaveAfterSecond"
            android:text="@string/prologue_after_labyrinth_button_relax"
            android:textColor="#303030"
            android:textSize="16sp"
            android:visibility="gone"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />

        <RadioButton
            android:id="@+id/buttonPrologueBadFinalThirdID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#60ffffff"
            android:button="@drawable/radio_button_selector"
            android:onClick="onPrologueCaveAfterThirdID"
            android:text="@string/prologue_cave_after_button_exit"
            android:textColor="#303030"
            android:textSize="16sp"
            android:visibility="gone"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />
    </RadioGroup>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/backgroundPrologueFinalBadID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/hockeyapp_text_white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textFinalBadTitleID"
        android:layout_width="238dp"
        android:layout_height="288dp"
        android:text="@string/prologue_final_title"
        android:textAlignment="center"
        android:textColor="?android:attr/colorForegroundInverse"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutPrologueFinalBadExtraEpisodeID"
        android:layout_width="294dp"
        android:layout_height="120dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875">

        <Button
            android:id="@+id/buttonPrologueFinalBadExtraEpisodeTrueID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPrologueFinalGoodExtraEpisodeTrue"
            android:text="@string/prologue_final_button_extra_episode_true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916" />

        <Button
            android:id="@+id/buttonPrologueFinalBadExtraEpisodeFalseID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPrologueFinalGoodExtraEpisodeFalse"
            android:text="@string/prologue_final_button_extra_episode_false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916" />

        <TextView
            android:id="@+id/textPrologueFinalBadExtraEpisodeID"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:text="@string/prologue_final_title_extra_episode"
            android:textAlignment="center"
            android:textColor="@color/hockeyapp_text_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.069" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
