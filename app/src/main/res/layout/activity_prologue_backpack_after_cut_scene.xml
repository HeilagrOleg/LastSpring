<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutCaveID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hockeyapp_background_header"
    tools:context="com.example.last_spring.gameprealpha.PrologueBackpackAfterCutScene">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/linearLayoutPrologueBackpackAfterCutID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="invisible"
            tools:visibility="visible">


            <RadioGroup
                android:id="@+id/radioGroupPrologueBackpackAfterCutNextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueBackpackAfterCutMoveCaveID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackpackAfterCutMoveCave"
                    android:text="@string/button_prologue_backpack_after_cut_scene_move_cave"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueBackpackAfterCutMoveCampID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackpackAfterCutMoveCamp"
                    android:text="@string/button_prologue_backpack_after_cut_scene_move_camp"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGrouprologueBackPackAfterCutSceneBeforeStartID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueBackPackAfterCutSceneBeforeStartFirstID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackPackAfterCutSceneBeforeStartFirst"
                    android:text="@string/button_prologue_backpack_after_cut_scene_button_knife"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueBackPackAfterCutSceneBeforeStartSecondID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackPackAfterCutSceneBeforeStartSecond"
                    android:text="@string/button_prologue_backpack_after_cut_scene_button_no_knife"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueBackPackAfterCutSceneBeforeStartThirdID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackPackAfterCutSceneBeforeStartThird"
                    android:text="@string/button_prologue_backpack_after_cut_scene_button_stop"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroupPrologueBackpackAfterCutStartID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <RadioButton
                    android:id="@+id/buttonPrologueBackpackAfterCutSleepID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackpackAfterCutSleep"
                    android:text="@string/button_prologue_backpack_after_cut_scene_continue_sleep"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="387dp" />

                <RadioButton
                    android:id="@+id/buttonPrologueBackpackAfterCutStandUpID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#60ffffff"
                    android:button="@drawable/radio_button_selector"
                    android:onClick="onPrologueBackpackAfterCutStandUp"
                    android:text="@string/button_prologue_backpack_after_cut_scene_finish_sleep"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="419dp" />
            </RadioGroup>

        </FrameLayout>


        <ScrollView
            android:id="@+id/scrollPrologueBackPackAfterCutSceneID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayoutPrologueBackpackAfterCutID"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="#80ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textPrologueBackPackAfterCutSceneBeforeStartID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lineSpacingExtra="3sp"
                android:lineSpacingMultiplier="0.8"
                android:orientation="vertical"
                android:text="@string/text_prologue_backpack_after_cut_start"
                android:textColor="#303030"
                android:textSize="18sp"
                android:visibility="visible" />

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
