        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778">

        <RadioButton
            android:id="@+id/buttonBackpackOpenTopPartID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onOpenTopPart"
            android:text="@string/prologue_backpack_open_top_part"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="355dp" />

        <RadioButton
            android:id="@+id/buttonBackpackOpenMiddlePartID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onOpenMiddlePart"
            android:text="@string/prologue_backpack_open_middle_part"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="387dp" />

        <RadioButton
            android:id="@+id/buttonBackpackBasementPartID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onBasementPart"
            android:text="@string/prologue_backpack_open_basement_part"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />

        <RadioButton
            android:id="@+id/buttonBackpackAdditionalPartID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onAdditionalPart"
            android:text="@string/prologue_backpack_open_additional_part"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/fortuneCounterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fortune"
        android:textColor="#303030"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintVertical_bias="0.454" />

</android.support.constraint.ConstraintLayout>
