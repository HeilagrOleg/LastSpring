<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prologue_down_second_scene_backpack_background">

    <Button
        android:id="@+id/prologueCutBackpackNextButtonID"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:onClick="onBackpackCamp"
        android:text="@string/prologue_backpack_camp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.969" />

    <TextView
        android:id="@+id/prologueCutBackpackID"
        android:layout_width="339dp"
        android:layout_height="236dp"
        android:text="@string/prologue_game_victory_down_text"
        android:textAlignment="center"
        android:textColor="#303030"
        android:textSize="15sp"
        android:lineSpacingMultiplier="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <RadioGroup
