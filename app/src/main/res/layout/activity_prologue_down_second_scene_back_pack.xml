        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856">

        <RadioButton
            android:id="@+id/additionalBackpackOintmentButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onAdditionalOintmentBackPack"
            android:text="@string/prologue_backpack_additional_part_ointment"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="355dp" />

        <RadioButton
            android:id="@+id/additionalBackpackOintmentLuckButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onAdditionalOintmentLuckBackPack"
            android:text="@string/prologue_backpack_additional_part_ointment_luck"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="387dp" />

        <RadioButton
            android:id="@+id/additionalBackpackNoOintmentButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onAdditionalNoOintmentBackPack"
            android:text="@string/prologue_backpack_additional_part_ointment_no_luck"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />

        <RadioButton
            android:id="@+id/additionalBackpackBackButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:button="@drawable/radio_button_selector"
            android:onClick="onAdditionalPartBack"
            android:text="@string/prologue_backpack_additional_part_back"
            android:textColor="#303030"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="419dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/prologueDownBackpackBasementPartRadioGroupID"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856">

        <RadioButton
            android:id="@+id/basementBackpackRaincoatButtonID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
