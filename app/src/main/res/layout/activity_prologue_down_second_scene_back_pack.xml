            android:textSize="16sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="355dp" />

        <RadioButton
            android:id="@+id/basementBackpackRaincoatLuckButtonID"
            android:layout_width="match_parent"
