<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutDialogBackpackID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prologue_backpack_shadow_background"
    tools:context=".PrologueBackpackHunter">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radioGroupPrologueBackpackHunterDialogID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <RadioButton
                android:id="@+id/buttonPrologueBackpackHunterFirstLineID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60303030"
                android:button="@drawable/radio_button_selector"
                android:lineSpacingExtra="3sp"
                android:onClick="onPrologueBackpackHunterFirstLine"
                android:text="@string/hunting_lodge_hunter_button_start"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonPrologueHunterSecondLineID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60303030"
                android:button="@drawable/radio_button_selector"
                android:onClick="onPrologueBackpackHunterSecondLine"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:visibility="gone"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonPrologueHunterThirdLineID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#70303030"
                android:button="@drawable/radio_button_selector"
                android:onClick="onPrologueBackpackHunterThirdLine"
                android:text="@string/prologue_backpack_hunter_button_start"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="419dp" />

        </RadioGroup>

        <ScrollView
            android:id="@+id/scrollPrologueBackpackHunterStartID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/radioGroupPrologueBackpackHunterDialogID"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textPrologueBackpackHunterStartMainID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#70303030"
                android:lineSpacingExtra="3sp"
                android:lineSpacingMultiplier="0.8"
                android:orientation="vertical"
                android:text="@string/prologue_backpack_hunter_text_start"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:visibility="visible" />

        </ScrollView>


        <TextView
            android:id="@+id/textPrologueBackpackHunterStartID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="#70303030"
            android:gravity="center"
            android:lineSpacingExtra="3sp"
            android:lineSpacingMultiplier="0.8"
            android:orientation="vertical"
            android:text="@string/hunting_lodge_hunter_text_start"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
