<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prologue_cave_inside_background"
    tools:context="com.example.last_spring.gameprealpha.prologue.PrologueCaveLabyrinth">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/textViewCaveLabyrinthID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#60ffffff"
            android:lineSpacingExtra="3sp"
            android:lineSpacingMultiplier="0.8"
            android:text="@string/hunting_lodge_hunter_text_start"
            android:textColor="#303030"
            android:textSize="16sp"
            android:visibility="visible"
            tools:text="@string/hunting_Lodge_start_before_text_again" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_above="@+id/imageCaveLabyrinthID"
            android:layout_below="@+id/textViewCaveLabyrinthID"
            >

        </FrameLayout>

        <ImageView
            android:id="@+id/imageCaveLabyrinthID"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_above="@+id/radioGroupCaveLabyrinthID"
            android:layout_centerInParent="true"
            android:background="@drawable/notebook_cave"
            android:visibility="gone"
            tools:visibility="visible" />

        <RadioGroup
            android:id="@+id/radioGroupCaveLabyrinthID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthLuckID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onCaveLabyrinthLuck"
                android:text="@string/cave_labyrinth_text_air_luck"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthNorthID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onNorth"
                android:text="@string/cave_labyrinth_button_forward"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthWestID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onWest"
                android:text="@string/cave_labyrinth_button_left"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthSouthID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onSouth"
                android:text="@string/cave_labyrinth_button_back"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="387dp" />

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthEastID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onEast"
                android:text="@string/cave_labyrinth_button_right"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="419dp" />

            <RadioButton
                android:id="@+id/buttonCaveLabyrinthExitID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#60ffffff"
                android:button="@drawable/radio_button_selector"
                android:onClick="onExit"
                android:text="@string/cave_labyrinth_button_exit"
                android:textColor="#303030"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="419dp" />

        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:id="@+id/textCounterStepID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#303030"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.715" />

    <RelativeLayout
        android:id="@+id/interfaceID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageBackgroundLuckTrueID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/background_luck_true" />

        <ImageView
            android:id="@+id/imageBackgroundLuckFalseID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/background_luck_false" />

        <ImageButton
            android:id="@+id/buttonMenuID"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:onClick="onButtonMenu"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:srcCompat="@drawable/button_menu" />

        <TextView
            android:id="@+id/textMessageID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:background="#96c7cf"
            android:text="@string/prologue_message"
            android:textColor="#303030"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/menuMainID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/menuID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"

                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"
                android:background="@color/hockeyapp_button_background_pressed">

                <LinearLayout
                    android:id="@+id/layoutButtonsMenuID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/hockeyapp_button_background_pressed"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonMenuCancelD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#90e9f7f7"
                        android:onClick="onMenuCancelD"
                        android:text="@string/button_dialog_cancel"
                        android:textColor="#303030"
                        tools:text="@string/button_dialog_cancel" />

                    <Button
                        android:id="@+id/buttonMenuMenulD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#90e9f7f7"
                        android:onClick="onMenuMenu"
                        android:text="@string/button_dialog_menu"
                        android:textColor="#303030" />

                    <Button
                        android:id="@+id/buttonMenuLuckUplD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#90e9f7f7"
                        android:onClick="onMenuLuckUp"
                        android:text="@string/button_dialog_menu"
                        android:textColor="#303030"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/buttonMenuExitID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="#90e9f7f7"
                        android:onClick="onMenuExit"
                        android:text="@string/button_dialog_exit"
                        android:textColor="#303030"
                        tools:text="@string/button_dialog_exit" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFieldsMenuID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/layoutButtonsMenuID"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/hockeyapp_button_background_pressed"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <LinearLayout
                        android:id="@+id/layoutInventoryLineID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="50"
                        android:background="@color/hockeyapp_button_background_pressed"
                        android:orientation="vertical"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textInventoryTextID"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#6e9ba1"
                            android:gravity="center"
                            android:text="@string/inventory_text_main"
                            android:textAlignment="center"
                            android:textColor="@color/hockeyapp_background_white" />

                        <TextView
                            android:id="@+id/textInventoryFoodID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#90e9f7f7"
                            android:gravity="center"
                            android:onClick="onInventoryFood"
                            android:text="@string/inventory_food"
                            android:textColor="@color/hockeyapp_background_white" />

                        <TextView
                            android:id="@+id/textInventoryDrugsID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#90e9f7f7"
                            android:gravity="center"
                            android:onClick="onInventoryDrugs"
                            android:text="@string/inventory_drugs"
                            android:textColor="@color/hockeyapp_background_white" />


                        <TextView
                            android:id="@+id/textInventorySleepingBugID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:onClick="onInventorySleepingBug"
                            android:text="@string/inventory_sleeping_bug"
                            android:textColor="@color/hockeyapp_button_background_selected" />

                        <TextView
                            android:id="@+id/textInventoryRaincoatID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:onClick="onInventoryRaincoat"
                            android:text="@string/inventory_raincoat"
                            android:textColor="@color/hockeyapp_button_background_selected" />

                        <TextView
                            android:id="@+id/textInventoryKnifeID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:gravity="center"
                            android:onClick="onInventoryKnife"
                            android:text="@string/inventory_knife"
                            android:textColor="@color/hockeyapp_button_background_selected"
                            tools:text="@string/inventory_knife" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutStateLineID"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="50"
                        android:background="@color/hockeyapp_button_background_pressed"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutStateProgressBarsID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/hockeyapp_button_background_pressed"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/progressBarMenuHealthID"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:max="100"
                                android:onClick="onBarMenuHealth"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_bar_menu_vertical_normal" />

                            <ProgressBar
                                android:id="@+id/progressBarMenuHungerID"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:max="100"
                                android:onClick="onBarBarMenuHunger"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_bar_menu_vertical_normal" />

                            <ProgressBar
                                android:id="@+id/progressBarMenuLuckID"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:max="100"
                                android:onClick="onBarMenuLuck"
                                android:paddingBottom="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:progress="50"
                                android:progressDrawable="@drawable/progress_bar_menu_vertical_normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutMenuImagesID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:background="@color/hockeyapp_button_background_pressed"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageHealthID"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/menu_health" />

                            <ImageView
                                android:id="@+id/imageHungerID"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/menu_hunger" />

                            <ImageView
                                android:id="@+id/imageLuckID"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/menu_luck" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
